#!/bin/bash

HOMES_DIR=$(pwd)/homes

name="$1"
if [ -z $name ]; then
  echo "Specify the nameâ€¦"
  exit
fi

HOME_DIR="${HOMES_DIR}/${name}"

mkdir -p "$HOME_DIR"

docker run --rm --name "codeserver-$name" --network backend \
  -v "$HOME_DIR":/home/coder/project remote \
  code-server  --bind-addr 0.0.0.0:8080 --auth none /home/coder/