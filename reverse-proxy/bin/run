#!/bin/bash

docker run --rm -p 80:80 -p 443:443 \
  --name reverse-proxy \
  --network backend \
  -v $(pwd)/confs/nginx.conf:/etc/nginx/nginx.conf:ro \
  -v $(pwd)/confs/certs/fullchain.pem:/etc/nginx/certs/fullchain.pem:ro \
  -v $(pwd)/confs/certs/privkey.pem:/etc/nginx/certs/privkey.pem:ro \
  -v $(pwd)/confs/dhparam.pem:/etc/nginx/certs/dhparam.pem:ro \
  -v $(pwd)/confs/errors:/errors/:ro \
  nginx
